<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="730dp"
        android:background="@drawable/bg_shape"
        >

        <EditText
            android:id="@+id/sb_sku"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/sb_prdname"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="166dp"
            android:background="@drawable/inp_box_cont"
            android:hint="SKU"
            android:paddingStart="10dp" />

        <EditText
            android:id="@+id/sb_prdname"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="166dp"
            android:background="@drawable/inp_box_cont"
            android:hint="Product Name"
            android:elevation="20dp"
            android:paddingStart="10dp" />

        <Spinner
            android:id="@+id/drp_categ"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_below="@+id/sb_prdname"
            android:layout_alignParentStart="true"
            android:layout_marginStart="260dp"
            android:layout_marginTop="-39dp"
            android:layout_marginEnd="166dp"

            android:background="@drawable/inp_box_cont" />

        <Button
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sb_sku"
            android:layout_alignParentStart="true"
            android:layout_marginStart="164dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="38dp"
            android:layout_toStartOf="@+id/btn_delete"
            android:background="@drawable/borderad"
            android:text="Search"
            android:textColor="@color/white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/btn_delete"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
            </LinearLayout>


        </ScrollView>


    </RelativeLayout>
</ScrollView>